@import "../../styles.styl"

.sideNav
    height 100%
    background-color black
    color orange
    justify-content center
    a
        display block
        font-size 2vw
        text-align center
        text-transform uppercase
        text-decoration none
        padding .6vw 0
        color @color
        &:first-child
            padding-top 1.2vw
        &:hover
            text-decoration: underline